{
	"name": "@tacticians-academy/academy-library",
	"version": "0.10.0",
	"author": "Kyle Coburn",
	"repository": "https://github.com/tacticians-academy/academy-library",
	"website": "https://github.com/tacticians-academy/academy-library",
	"type": "module",
	"main": "dist/index.ts",
	"types": "dist/index.ts",
	"scripts": {
		"prepare": "node --loader ts-node/esm build/extract.ts && node --loader ts-node/esm build/transformLoad.ts && node --loader ts-node/esm build/validate.ts && node --loader ts-node/esm build/flashcards.ts",
		"github": "node --loader ts-node/esm build/github.ts"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.3.6",
		"@types/node": "^17.0.21",
		"eslint": "^8.11.0",
		"node-fetch": "^3.2.3",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.2"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/typescript",
		"parserOptions": {
			"sourceType": "module",
			"project": [
				"tsconfig.eslint.json"
			]
		},
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": "error"
		}
	},
	"eslintIgnore": [
		"dist"
	]
}
