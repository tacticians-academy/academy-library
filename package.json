{
	"name": "@tacticians-academy/academy-library",
	"version": "0.33.0",
	"author": "Kyle Coburn",
	"repository": "https://github.com/tacticians-academy/academy-library",
	"website": "https://github.com/tacticians-academy/academy-library",
	"type": "module",
	"main": "dist/index.ts",
	"types": "dist/index.ts",
	"scripts": {
		"prepare": "node --loader ts-node/esm build/update-current.ts",
		"etl:all": "node --loader ts-node/esm build/update-all.ts",
		"deploy": "pnpm i && npm version minor -m 'ðŸ”– %s' && read -p 'Press y to publish'; if [[ $REPLY =~ ^[Yy]$ ]]; then git push && git push --tags && npm publish --access public; fi"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.5.1",
		"@types/node": "^20.11.25",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"eslint": "^8.57.0",
		"node-fetch": "^3.3.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/typescript",
		"rules": {
			"@typescript-eslint/strict-boolean-expressions": [
				"warn",
				{
					"allowNullableEnum": true
				}
			]
		}
	},
	"eslintIgnore": [
		"dist"
	]
}
