{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext"],
		"outDir": "dist",
	},
	"include": ["build/**/*.ts", "dist/*.ts"],
}
